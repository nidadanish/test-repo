    <position>0</position>
    <status>active</status>
	<default_language>en</default_language>	
    <auto_install>MULTIVENDOR,ULTIMATE</auto_install>
	<supplier>cs-commerce.com</supplier>
	<supplier_link>https://www.cs-commerce.com</supplier_link>	
	<compatibility>       
        <core_version>
            <min>4.3.1</min>
