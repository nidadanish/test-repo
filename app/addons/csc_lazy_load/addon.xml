    </authors>
	<settings edition_type="ROOT,ULT:VENDOR">
		<sections>
		<section id="general">
			<name>General</name>
			<items>
				<item id="sys">					
					<type>header</type>							
				</item>
			</items>
		</section>
		</sections>
	</settings>
	<queries>
		<item for="install">
			CREATE TABLE IF NOT EXISTS `?:csc_lazy_load` (
				`name` varchar(255) COLLATE 'utf8_general_ci' NOT NULL,
				`company_id` mediumint(8) NOT NULL DEFAULT '0',
				`value` text COLLATE 'utf8_general_ci' NOT NULL DEFAULT '',
				UNIQUE (`name`, `company_id`)
			 ) ENGINE='InnoDB' COLLATE 'utf8_general_ci';
		</item>		
		<item for="uninstall">
			DROP TABLE IF EXISTS `?:csc_lazy_load`;	
		</item>
	</queries>
	<functions>
        <item for="install">fn_csc_lazy_load_install</item>        
        <item for="uninstall">fn_csc_lazy_load_uninstall</item>
    </functions>		 
</addon>
